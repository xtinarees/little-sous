<!doctype html>
<html {{ function('language_attributes') }}>

    {% include 'templates/head.twig' %}

    {% include 'templates/header_scripts.twig' %}

    <body>

        {% import "templates/macros.twig" as macros %}
        {% import "templates/icons.twig" as icons %}

        <!-- Google Tag Manager (noscript) -->
        <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NZNXC7C"
        height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
        <!-- End Google Tag Manager (noscript) -->

        {% block contentNoHeader %}

            {% include 'templates/header.twig' %}

            {{ macros.adunit('horizontal', 'top') }}

            <div class="content-wrapper" role="document">
                <div class="content">
                    <main class="content-main">
                        {% block content %}{% endblock %}
                    </main>
                </div>
            </div>

            {% if fn('is_tax') or fn('is_category') %}
                {{ macros.adunit('horizontal', false, false, 'desktop') }}
            {% else %}
                {{ macros.adunit('horizontal') }}
            {% endif %}

            {% include 'templates/footer.twig' %}

        {% endblock %}

        {{ function('wp_footer') }}

        <!-- Start of HubSpot Embed Code -->
        <script type="text/javascript" id="hs-script-loader" async defer src="//js.hs-scripts.com/4339240.js"></script>
        <!-- End of HubSpot Embed Code -->

    </body>

</html>
